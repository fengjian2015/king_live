<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomTabLayout">
        <attr name="ctlTextSize" format="dimension"/>
        <attr name="ctlTextColor" format="color"/>
        <attr name="ctlTvBackground" format="color"/>
        <attr name="ctlTextStyle" format="enum">
            <enum name="normal" value="0"/>
            <enum name="bold" value="1"/>
        </attr>
        <attr name="ctlUnderlineWidth" format="dimension"/>
        <attr name="ctlUnderlineHeight" format="dimension"/>
        <attr name="ctlUnderlinePaddingBottom" format="dimension"/>
        <attr name="ctlUnderlineColor" format="color"/>
        <attr name="ctlUnderlineNumber" format="integer"/>
        <attr name="ctlCheckedTextColor" format="color"/>
        <attr name="ctlCheckedTextSize" format="dimension"/>
        <attr name="ctlUnderlineDuration" format="integer"/>
        <attr name="ctlHorizontalSpace" format="integer"/>
        <attr name="ctlIsAutomatic" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="TagFlowLayout">
        <attr name="max_select" format="integer"></attr>
        <attr name="tag_gravity">
            <enum name="left" value="-1" />
            <enum name="center" value="0" />
            <enum name="right" value="1" />
        </attr>
    </declare-styleable>


    <declare-styleable name="HintText">
        <attr name="hintText_hint" format="string"></attr>
        <attr name="hintText_color" format="color"></attr>
        <attr name="text_color" format="color"></attr>
    </declare-styleable>

    <declare-styleable name="ButtonAnimation">
        <attr name="text_data" format="string"></attr>
        <attr name="t_color" format="color"></attr>
        <attr name="t_size" format="dimension"></attr>
        <attr name="bg_color" format="color"></attr>
    </declare-styleable>

    <declare-styleable name="GifImageView">
        <!--gif文件引用-->
        <attr name="gif_src" format="reference"  />
        <!--是否加载完自动播放-->
        <attr name="auth_play" format="boolean"  />
        <!--播放次放，默认永远播放-->
        <attr name="play_count" format="integer"  />
        <!--播放完成后是否停留在最后一帧，默认false-->
        <attr name="end_last_frame" format="boolean"  />
    </declare-styleable>
</resources>