<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_title_top"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <View
        android:id="@+id/main_root"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@drawable/red_gradient"
        />
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d50dp"
        android:layout_below="@+id/main_root"
        android:background="@drawable/red_gradient">

        <ImageView
            android:id="@+id/bark"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/d10dp"
            android:src="@mipmap/icon_bark1" />

        <ImageView
            android:id="@+id/iv_finish"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/bark"
            android:padding="@dimen/d10dp"
            android:src="@mipmap/icon_sh_cancel1"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_title_top"
            style="@style/TextWhiteStyle18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:maxEms="10"
            android:singleLine="true" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_alignParentRight="true">
            <ImageView
                android:id="@+id/iv_more_two"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="@dimen/d5dp"
                android:paddingLeft="@dimen/d5dp"
                android:paddingTop="@dimen/d12dp"
                android:paddingBottom="@dimen/d12dp"
                android:src="@mipmap/icon_share"
                android:layout_toLeftOf="@+id/iv_more"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/iv_more"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:paddingRight="@dimen/d10dp"
                android:paddingLeft="@dimen/d5dp"
                android:paddingTop="@dimen/d12dp"
                android:paddingBottom="@dimen/d12dp"
                android:src="@mipmap/icon_collection"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/tv_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="保存"
                android:gravity="center"
                android:paddingRight="@dimen/d10dp"
                android:paddingLeft="@dimen/d5dp"
                style="@style/TextWhiteStyle14sp"
                android:visibility="gone"/>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>