<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/d15dp"
    android:paddingRight="@dimen/d15dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d70dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/d2dp"
            style="@style/TextGrayStyle14sp"
            android:text="02-25\n18:00"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ft_red_bt2"
                android:layout_centerInParent="true"
                android:text="取款"
                style="@style/TextRedStyle14sp"
                android:paddingRight="@dimen/d5dp"
                android:paddingLeft="@dimen/d5dp"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_money"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                style="@style/TextBlack1Style17sp"
                android:text="100.00元"
                android:gravity="bottom"
                />
            <TextView
                android:id="@+id/tv_state"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                style="@style/TextGrayStyle14sp"
                android:text="处理中"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            style="@style/TextGrayStyle14sp"
            android:maxLines="2"
            android:lineSpacingExtra="@dimen/d2dp"
            android:text="直播房号:\n1231号房间"/>
    </LinearLayout>
    <View style="@style/HorizontalBoundaryStyle"
        android:layout_alignParentBottom="true"></View>
</RelativeLayout>
