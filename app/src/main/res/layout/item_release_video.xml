<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="@dimen/d15dp"
    android:paddingTop="@dimen/d10dp"
    android:paddingRight="@dimen/d15dp"
    android:paddingBottom="@dimen/d10dp"
    android:layout_marginTop="@dimen/d10dp">
    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="@dimen/d170dp"
        android:layout_height="@dimen/d100dp"
        android:layout_marginRight="@dimen/d10dp"
        android:scaleType="centerCrop"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d100dp"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/iv_image">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            style="@style/TextBlack1Style17sp"
            android:text="百家乐连赢直播"
            android:singleLine="true"/>
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:singleLine="true"
            style="@style/TextGrayStyle11sp"
            android:text="2019/03/07 18:46:00"/>

        <TextView
            android:id="@+id/tv_classification"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            style="@style/TextGrayStyle12sp"
            android:singleLine="true"
            android:text="分类：老虎机"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ft_red_bt2"
                android:text="视频"
                style="@style/TextRedStyle12sp"
                android:paddingRight="@dimen/d5dp"
                android:paddingLeft="@dimen/d5dp"
                />
            <TextView
                android:id="@+id/tv_popularity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextGrayStyle12sp"
                android:layout_marginLeft="@dimen/d5dp"
                android:text="人气：5.5W"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>