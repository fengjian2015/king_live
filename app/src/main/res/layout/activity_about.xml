<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_bg"
    tools:context=".ui.activity.person.AboutActivity">
    <include layout="@layout/activity_top"/>
    <ImageView
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d75dp"
        android:src="@mipmap/icon_aboutlogo"
        android:paddingRight="@dimen/d30dp"
        android:paddingLeft="@dimen/d30dp"
        android:layout_marginTop="@dimen/d180dp"/>
    <TextView
        android:id="@+id/tv_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        style="@style/TextGrayStyle20sp"
        android:layout_marginTop="@dimen/d15dp"
        />
</LinearLayout>