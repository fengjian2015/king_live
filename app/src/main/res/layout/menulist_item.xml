<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/d5dp"
        android:layout_marginLeft="@dimen/d10dp"
        android:layout_marginRight="@dimen/d10dp"
        android:background="@drawable/ft_white_bt1"
        >

        <RelativeLayout
            android:id="@+id/rl_card"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d50dp">

            <Button
                android:id="@+id/button_common2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d50dp"
                android:background="@null"
                style="@style/TextBlack1Style16sp"/>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>